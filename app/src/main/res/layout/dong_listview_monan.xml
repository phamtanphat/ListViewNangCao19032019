<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#789499">

    <ImageView
        android:id="@+id/imageviewMonan"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textviewTenmonan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/imageviewMonan"
        android:text="Cơm chiên dương mình châu"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAllCaps="true"
        android:textColor="#f20"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <TextView
        android:ellipsize="end"
        android:maxLines="1"
        android:id="@+id/textviewGiamonan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewTenmonan"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/imageviewMonan"
        android:text="Giá món ăn"
        android:textAllCaps="true"
        android:textColor="#264E9E"
        android:textSize="25sp"
        android:textStyle="italic" />
</RelativeLayout>